import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner input = new Scanner (System.in);
		welcomemessage nameObject = new welcomemessage ();
		
		System.out.println("enter name");
		String name = input.nextLine(); //we have variable name. want it = any input 
		
		nameObject.welcomemessage(name);
	}
}
